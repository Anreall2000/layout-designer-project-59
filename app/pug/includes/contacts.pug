mixin avatar(url, size = "50px")
  img.rounded-circle.ms-3.me-4(src= url, alt="avatar" width= size height= size)

mixin contact(contactInfo)
  a.contact.d-flex.align-items-center.text-decoration-none.mb-3.shadow-sm(href="#")
    +avatar(contactInfo.avatar)
    .py-4
        p.text-dark.fw-bold.mb-0= contactInfo.name
        p.text-muted.small.mb-0= contactInfo.status

mixin search(placeholder)
  form.mb-5(role="search" action="#" method="post")
    input.shadow-none.search.form-control.p-4(type="search" placeholder= placeholder aria-label="Поиск")

h2.fw-bold.mb-4.text-dark Контакты
+search("Поиск по контактам")
each contactInfos, letter in contacts
  p.mb-3.mt-5= letter
  each contactInfo in contactInfos
    +contact(contactInfo)